    link(rel="apple-touch-icon", href="/apple-touch-icon.png")
    link(rel="manifest", href="/site.webmanifest")
  body
    header
      nav
        a(href="/") Home
        a(href="/about") About
        a(href="/josh") Josh
        a(href="/things") Things
      h1 // The_Thing_Internal
