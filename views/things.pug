doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Things - Professor Solo
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;600&family=Inter:wght@300;400;600;700&family=Orbitron:wght@400;500;700;900&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/styles/style.css")
    link(rel="icon", type="image/png", href="/favicon.png")
    link(rel="icon", type="image/png", href="/favicon-96x96.png", sizes="96x96")
    link(rel="apple-touch-icon", href="/apple-touch-icon.png")
    link(rel="manifest", href="/site.webmanifest")
  body
    header
      nav
        a(href="/") Home
        a(href="/about") About
        a(href="/josh") Josh
        a(href="/things") Things
      h1 // The_Thing_Inventory
    main
       article.card
         header
           h2 Inventory Log
           //- Conditional Logic to check for things
           if things.length > 0 
             h3 [ DATA STREAM ACTIVE ]
           else 
             h3 [ NO DATA DETECTED ]
         section
            if things.length > 0
              ul.thing-list
                //- Iteration: Loop through the things array
                each thing in things
                  li.thing-item
                    a(href="/things/" + thing.id, style="display: block; text-decoration: none; color: inherit;") 
                      h4= thing.name 
                      p= thing.description
            else
               p.bio
                 | "This area is designated for Thing containment. Do not feed the objects."
               p
                 | No things found in the database.
               h4 // Status_Report
               ul
                 li Data Source: null
                 li Render Mode: Empty State
    footer
